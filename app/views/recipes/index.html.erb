<div class="container pt-6">
  <div class="column pl-6 ml-6 mb-6"><h2 class="title is-2">These are Recipes specially made for you!</h2></div>

  <div class="column">
    <% @recipes.each do |recipe| %>
      <div class="content">
        <h3 class="title is-3"><%= link_to recipe.fields[:title], recipe_path(recipe.id) %></h3> 
        <img class="content" src="<%= recipe.fields[:photo].url %>" />
      </div>
    <% end %>
  </div>
</div>
